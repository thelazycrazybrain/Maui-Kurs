<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutApp.Pages.TableViewPage"
             Title="TableViewPage">
    <TableView Intent="Settings">
        <TableRoot Title="Settings">
            <TableSection Title="Authentication" >
                <EntryCell Label="Username" />
                <SwitchCell Text="Login automatically" />
            </TableSection>
            <TableSection Title="Notifications" >
                <SwitchCell Text="New Messages" />
                <SwitchCell Text="New Comments" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>