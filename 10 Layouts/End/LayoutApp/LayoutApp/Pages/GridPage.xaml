<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutApp.Pages.GridPage"
             Title="Grid">
    <Grid RowDefinitions="Auto,Auto,*,Auto" 
          ColumnDefinitions="300,*">
        <Label Grid.Row="0" 
               Text="Row 0" 
               Background="Red"/>
        <Label Grid.Row="1" 
               Grid.Column="1" 
               Text="Row 1" 
               Background="Pink"/>
        <Label Grid.Row="2" 
               Grid.ColumnSpan="2" 
               Text="Row 2" 
               Background="Blue"/>
        <Label Grid.Row="3" 
               Grid.Column="1" 
               Text="Row 3" 
               Background="Teal"/>
    </Grid>
</ContentPage>