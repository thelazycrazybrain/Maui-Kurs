<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LayoutApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:LayoutApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="LayoutApp">
    <ShellContent
         Title="Vertical StackLayout"
         ContentTemplate="{DataTemplate pages:VerticalStackLayoutPage}"
         Route="VerticalStackLayout" />
    <ShellContent
         Title="Horizontal StackLayout"
         ContentTemplate="{DataTemplate pages:HorizontalStackLayoutPage}"
         Route="HorizontalStackLayout" />
    <ShellContent
         Title="ScrollView"
         ContentTemplate="{DataTemplate pages:ScrollViewPage}"
         Route="ScrollView" />
    <ShellContent
         Title="Grid"
         ContentTemplate="{DataTemplate pages:GridPage}"
         Route="Grid" />
    <ShellContent
         Title="Flex Layout"
         ContentTemplate="{DataTemplate pages:FlexLayoutPage}"
         Route="FlexLayout" />
    <ShellContent
         Title="Absolute Layout"
         ContentTemplate="{DataTemplate pages:AbsoluteLayoutPage}"
         Route="AbsoluteLayout" />
    <ShellContent
        Title="Table View"
        ContentTemplate="{DataTemplate pages:TableViewPage}"
        Route="TableView" />
</Shell>
